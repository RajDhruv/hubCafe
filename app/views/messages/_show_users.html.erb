
<div style="padding: 0 0 0 15px;background-color: beige;">
<h1 style="color: silver;text-shadow: 2px 2px chocolate;">Inbo<i><b>X</b></i></h1>
<p style="color: cadetblue;"></p>
</div>
<center>
<%if !@all_users.nil? and !@all_users.empty?%>
<div class="col-lg-9">
<div class="row">
<%@all_users.each do |user|%>
<div class="col-lg-4 col-md-6 mb-4">
	<div class="card h-100" style="background:transparent;">
		<%profile_pic=user.profile_img.url
		profile_pic_gender=""%>
			<%if user.sex=='Male'%>
				<%profile_pic_gender=asset_path('profile_pic/male.png')%>
			<%elsif user.sex=='Female'%>
				<%profile_pic_gender=asset_path('profile_pic/female.png')%>
			<%else%>
				<%profile_pic_gender=asset_path('profile_pic/other.png')%>
			<%end%>
			<style type="text/css">
				#user_pic_widget_<%=user.id%>
				{
				background-image:url('<%=profile_pic_gender%>');
				width: 100%;
				height: 170px;
				background-size: 100%;
				background-repeat: no-repeat;
				}
			</style>
			<div title="<%=user.name%>" id="user_pic_widget_<%=user.id%>" style="border-radius: 50%;border-color: black;border-style: dotted;cursor: pointer;" onclick="get_messages('<%=user.id%>')">
				<img src="<%=profile_pic%>" class="card-img-top" alt="" style="border-radius: 50%;height:100%">	
			</div>
			<div class="card-body" style="background: burlywood;border-radius: 20px;">
	                  <h4 class="card-title">
	                    <a onclick="get_messages('<%=user.id%>')" style="cursor: pointer;"><%=user.name%></a>
	                  </h4>
	                  <!-- <h5>$24.99</h5> -->
	                  <p class="card-text"><%=user.profile_def%></p>
	        </div>
	</div>
</div>
<%end%>

</div>
</div>
<%else%>
<label>Sorry!!! But it seems like you haven't communicated with anyone yet.</label>
<%end%>
</center>