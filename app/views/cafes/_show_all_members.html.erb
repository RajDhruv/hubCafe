
<div>
	<label style="color:brown; font-size: large; padding: 0 0 0 10px;"><i><b>Members:</b></i></label>
</div>
<center>
<div class="col-lg-9">
<div class="row">
<%@members_data.each_with_index do |user,ind|%>
<div class="col-lg-4 col-md-6 mb-4">
	<div class="card h-100" style="background:transparent;">
		<%profile_pic=user.profile_img.url
		profile_pic_gender=""%>
			<%if user.sex=='Male'%>
				<%profile_pic_gender=asset_path('profile_pic/male.png')%>
			<%elsif user.sex=='Female'%>
				<%profile_pic_gender=asset_path('profile_pic/female.png')%>
			<%else%>
				<%profile_pic_gender=asset_path('profile_pic/other.png')%>
			<%end%>
			<style type="text/css">
				#user_pic_widget_<%=user.id%>
				{
				background-image:url('<%=profile_pic_gender%>');
				width: 100%;
				height: 170px;
				background-size: 100%;
				background-repeat: no-repeat;
				}
			</style>
			<%if ind==0%>
				<%border_color="chocolate"%>
			<%else%>
				<%border_color="black"%>
			<%end%>
			<div title="<%=user.name%>" id="user_pic_widget_<%=user.id%>" style="border-radius: 50%;border-color: <%=border_color%>;border-style: dotted;">
				<img src="<%=profile_pic%>" class="card-img-top" alt="" style="border-radius: 50%;height:100%">	
			</div>
			<div class="card-body" style="background: burlywood;border-radius: 20px;">
	                  <h4 class="card-title">
	                    <a ><%=user.name%></a>
	                  </h4>
	                  <!-- <h5>$24.99</h5> -->
	                  <p class="card-text"><%=user.profile_def%></p>
	        </div>
	</div>
</div>
<%end%>

</div>
</div>
</center>