<script type="text/javascript">
	function send_request(cafe_id,requestor_id)
	{
		$.ajax({
			type: 'post',
			url: 'invitations/new_request_log?cafe_id='+cafe_id+'&requestor_id='+requestor_id
		})
	}
</script>
