<style type="text/css">
.post_description_iframe
{
background-image:url('<%=asset_path("post_background.jpg")%>');
width: 100%;
background-size: 100%;
background-repeat: no-repeat;
box-shadow: 7px 7px;
}
.copied {

    position: fixed;
    color: #5ad805;
    /*top: 28px !important;*/
   /* margin-left: 350px !important;*/
    background: #fff;
    border: 1px solid #eee;
    padding: 4px;
    width: 260px;
    z-index: 1;
    border-radius: 10px;

}
